# Dockerfile for Dyad Test Server
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy the dyad-test-server.js file
# Note: This file should be copied into the mono-web-ide directory during build
COPY dyad-test-server.js .

# Environment variables with defaults
ENV PORT=5000
ENV RESPONSE_DELAY=100

# Expose the API port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD node -e "require('http').get('http://localhost:5000/health', (r) => { process.exit(r.statusCode === 200 ? 0 : 1); })" || exit 1

# Run the test server
CMD ["node", "dyad-test-server.js"]
