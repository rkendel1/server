# Mono Web IDE Environment Variables
# Copy this file to .env and customize as needed

# Code Server Configuration
# Password for accessing Code Server web interface
PASSWORD=coder

# Dyad Configuration
# URL to Dyad backend (leave as-is to use test server)
DYAD_BACKEND_URL=http://dyad-server:5000/completion

# API Key for production Dyad instances (optional for test server)
API_KEY=

# AI Model to use for completions
AI_MODEL=dyad-default

# Session ID for tracking (optional)
SESSION_ID=default-session

# User ID for tracking (optional)
USER_ID=default-user

# Advanced Dyad Test Server Configuration
# Response delay in milliseconds (simulates processing time)
RESPONSE_DELAY=100

# Production Dyad Configuration (uncomment to use)
# DYAD_BACKEND_URL=https://your-dyad-instance.com/api/completions
# API_KEY=your-production-api-key
# AI_MODEL=dyad-production-model

# PostgreSQL Configuration
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass
POSTGRES_DB=devdb

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Auth Service Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis Configuration
# Leave empty for no password, or set a password for production
REDIS_PASSWORD=

# Default Users (created by auth service)
# Username: admin, Password: admin123
# Username: demo, Password: demo123
