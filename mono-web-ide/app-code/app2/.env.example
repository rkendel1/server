# App2 Environment Variables
# Copy this file to .env in the app2 directory

# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database Connection
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=devdb
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass

# Auth Service
AUTH_SERVICE_URL=http://auth-service:4000

# Redis (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=*
